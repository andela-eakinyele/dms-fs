.overlay(layout="column" layout-align="center center")
  div.extraView(layout="column" layout-align="center center" layout-padding)
    div(layout="column")
      div(layout layout-margin layout-align="center center")
        img(ng-src="./images/test-logo.png")
        span.appName ProDocs
      h3 Create, Share and Manage Documents
      .md-padding(layout layout-align="center center" ng-if="showButton")
        md-button.md-primary.md-raised(md-ink-ripple ui-sref="home.login") Login
        md-button.md-accent.md-raised(md-ink-ripple ui-sref="home.adduser") Sign Up
   
    div.features(ng-if="showButton")
      div(ui-view="feature" layout-gt-sm="row" layout="column" layout-padding)

  div.nextViews(layout="column" layout-align="center center" ng-if="!showButton")
    md-content(ui-view="nextView" id="form-views")