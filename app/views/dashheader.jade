.header.md-toolbar-tools(layout ="row" layout-align="center center" layout-padding)
  md-button(ng-click="openSideNav('left')" aria-label="openLeftMenu" hide-gt-md id="hdrbtn")
    md-icon(md-font-set="fa fa-bars fa-2x")
  div.dashheader(layout layout-align="start center" flex)
    img(src="images/test-logo.png")
    span(flex="30")
    h3 Dashboard ({{groupName}})

  div.right-border(layout layout-align="center center" ng-if="userRole[0].title === \"superAdmin\"")
    md-button(ui-sref="dashboard.admin.user" ui-sref-active="colorful")
      md-icon(md-font-set="fa fa-user-plus fa-2x" md-menu-origin)
      span Add User
      md-tooltip Add User

  div.right-border(layout layout-align="center center" hide-xs hide-sm ng-show="newButton")
    md-button(ui-sref="dashboard.new" ui-sref-active="colorful")
      md-icon(md-font-set="fa fa-file-text-o fa-2x") 
      span New Doc
      md-tooltip New Doc

  div.right-border(layout ng-repeat="i in menu" hide-xs hide-sm layout-align="center center")
    md-button(ng-click="menuAction(i.click)")
      md-icon(md-font-set="{{i.icon}}") 
      span(hide-xs hide-sm) {{i.name}}
      md-tooltip {{i.name}}
    
  div.right-border(layout hide-gt-sm layout-align="center center")
    md-menu(md-offset="-50 50")
      md-button(ng-click="openMenu($mdOpenMenu, $event)")
        span Menu &nbsp;
        md-icon(md-font-set="fa fa-ellipsis-v fa-2x" md-menu-origin) 
      md-menu-content(width="4")
        md-menu-item(ng-show="newButton")
          md-button(ui-sref="dashboard.new" ui-sref-active="colorful")
            md-icon(md-font-set="fa fa-file-text-o fa-2x") 
            span New Doc
            md-tooltip New Doc
        md-menu-item(ng-repeat="i in menu")
          md-button.md-primary(ng-click="menuAction(i.click)")
            md-icon(md-font-set="{{i.icon}}" md-menu-align-target) 
            span {{i.name}}
            md-tooltip {{i.name}}

