div.docForm(layout="column" layout-margin ng-init="loadRoles()") 
  form(name="docForm" layout="column" method="post" enctype="multipart/data" ng-submit="saveDoc($event, Docs, newDoc)")
    div(layout='row' flex layout-margin)
      div(layout="column" flex="70")
        md-toolbar
          .md-toolbar-tools.docheader
            h3 {{newDoc.label}} - {{newDoc.title}}
            span(flex)
            md-button.md-primary.md-raised(aria-label="Save" type="submit" ng-disabled="docForm.$invalid")
              | Save
            md-button.md-warn.md-raised(aria-label="Close dialog" ng-click="upState()")
              | Cancel
       
        .formTitle
          div(layout="row" layout-margin)
            md-input-container(flex="30")
              label(for="label")
              input(name="label" ng-model="newDoc.label" ng-maxlength="10" type="text" placeholder="Enter a label") 
              div(ng-messages="docForm.label.$error" ng-show="docForm.label.$dirty")
                div(ng-message="maxlength") Label Exceeds maximum character length
            md-input-container.md-block(flex="70")
              label(for="title")
              input(name="title" ng-model="newDoc.title" ng-maxlength="30" placeholder="Enter Document Title")
              div(ng-messages="docForm.title.$error" ng-show="docForm.title.$dirty")
                div(ng-message="maxlength") Title Exceeds maximum character length
        .formContent(layout-padding)
          md-input-container.md-block
            label
            textarea(ng-model="newDoc.content" columns="1" rows="50" placeholder="Enter Text")
      div(layout="column" flex)
        md-toolbar
          .md-toolbar-tools
            h3 Share with Group
            span(flex="") 
        .md-padding.Share
          md-checkbox(ng-repeat="role in roles" ng-click="toggle(role._id, newDoc.roles)" aria-label="Share Role") {{role.title}}