md-sidenav.md-sidenav-left.md-whiteframe-z2(md-component-id="lefty" md-is-locked-open="$mdMedia(\"gt-md\")")
  md-toolbar
    div(layout="row" layout-margin)
      h3.md-toolbar-tools {{activeUser.username}}
  md-content(layout="column")
    div(layout="column" layout-padding ng-if="superAdmin.length > 0")
      h3.sidehead Administrator Menu
      md-button.btn-style(md-ink-ripple aria-label="superAdmin menu item" ui-sref="dashboard.admin.group") Groups
      md-button.btn-style(md-ink-ripple aria-label="admin menu item" ui-sref="dashboard.admin.user") Users
      md-divider

    div(layout="column" ng-if="userRole[0].title === \"Admin\"" layout-padding)
      h3.sidehead Group Admin
      md-button.btn-style(md-ink-ripple aria-label="admin menu item" ui-sref="dashboard.admin.doc({groupid: activeGroup})") Documents
      md-button.btn-style(md-ink-ripple aria-label="admin menu item" ui-sref="dashboard.admin.viewuser({groupid: activeGroup})") Users
      md-button.btn-style(md-ink-ripple aria-label="admin menu item" ui-sref="dashboard.admin.role({groupid: activeGroup})")  Roles
      md-divider
    div(layout="column" layout-padding ng-if="activeGroup !== \"\"")
      h3.sidehead Groups
      md-checkbox(ng-repeat="group in groups" aria-label="user groups" ng-checked= "isSelected(group._id)" ng-click="toggle(group._id)" ) {{group.title}}
      md-divider
    div(layout="column" layout-padding ng-if="activeGroup !== \"\"")
      h3.sidehead Documents
      md-button.btn-style(md-ink-ripple aria-label="Doc category" ui-sref="dashboard.list.mydocs") My Documents
      md-button.btn-style(md-ink-ripple aria-label="Doc category" ui-sref="dashboard.list.shared({roleid: userRole[0]._id})") Shared Documents
      md-divider
